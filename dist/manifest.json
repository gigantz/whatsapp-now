{
  "version": "1.0.0",
  "name": "WhatsApp Now",
  "short_name": "wpnow",
  "manifest_version": 2,
  "description": "Send WhatsApp message to your selected phone number on any web page",
  "permissions": [
    "contextMenus",
    "tabs",
    "https://*/",
    "http://*/"
   ],
  "background": { 
    "scripts": ["index.js"]
  },
  "browser_action": {
    "default_icon": "images/icons/favicon-32x32-dunplab-manifest-713.png"
  },
  "icons": {
    "16": "images/icons/favicon-16x16-dunplab-manifest-713.png",
    "32": "images/icons/favicon-32x32-dunplab-manifest-713.png",
    "72": "images/icons/apple-icon-72x72-dunplab-manifest-713.png",
    "114": "images/icons/apple-icon-114x114-dunplab-manifest-713.png",
    "144": "images/icons/apple-icon-144x144-dunplab-manifest-713.png",
    "152": "images/icons/apple-icon-152x152-dunplab-manifest-713.png",
    "384": "images/icons/apple-icon-180x180-dunplab-manifest-713.png"
  },
  "web_accessible_resources": [
    "images/icons/favicon-16x16-dunplab-manifest-713.png"
  ],
  "commands": {
    "hotkey-whatsapp": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Send WhatsApp message"
    }
  }
}